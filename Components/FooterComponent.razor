@code {
    private bool _isMobile = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isMobile = await JSRuntime.InvokeAsync<bool>("eval", "navigator.userAgentData?.mobile ?? /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)");
            StateHasChanged();
        }
    }

    private string GetMapsLink()
    {
        const string address = "15894+Flanagan+St,+Roseville,+MI+48066";
        
        if (_isMobile)
            return $"geo:0,0?q={address}";
        else
            return $"https://maps.google.com/?q={address}";
    }
}